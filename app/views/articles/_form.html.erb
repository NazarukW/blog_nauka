<%= form_with model: article do |form| %>
	
	<div>
		<%= form.label :titlr, "Tytuł" %><br>
		<%= form.text_field :titlr %>
		<% article.errors.full_messages_for(:titlr).each do |message| %>
			<div><%= message %></div>
		<%end%>
	</div>

	<div>
		<%= form.label :body, "Treść" %><br>
		<%= form.text_area :body %>
		<% article.errors.full_messages_for(:body).each do |message| %>
			<div><%= message %></div>
		<%end%>
	</div>
	
	<div>
		<%= form.label :status %><br>
		<%= form.select :status, ["public", "private", "archived"], selected: "public" %>
	</div>
	
	<div>
		<%= form.submit %>
	</div>
<% end %>
